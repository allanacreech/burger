<div class="container">
  <div id="header" class="col-md-12">
<h2>Welcome to Eat-Da-Burger!</h2>

<h2>Make a Burger of your Dreams and then Devour it!</h2>
  </div>

  <!--NEW ROW CENTERED COLUMNS-->
<div class="row justify-content-md-center">
  <div class="col-lg-2"></div>
<div class="col-lg-8">
<h2 class="text-center">Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name :</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Add Your Tasty Burger</button>
</div>
<div class="col-lg-2"></div>
</div>
</form>


  <div class="row justify-content-md-center">
   <div class="col col-lg-2">
     
   </div>
    <div class="col col-lg-4">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
  </div>

<div class="col col-lg-4">
<h2>Burgers Yor Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <!--<button type="submit">Devour!</button>-->
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="col-lg-2"></div>


</div>
<!--end of row-->
</div>
<!--end of container-->